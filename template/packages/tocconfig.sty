\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{packages/tocconfig}

\setcounter{secnumdepth}{4}                            % 4 niveles en el índice
\setlength{\cftlistingnumwidth}{.08\textwidth}

% Tabulaciones para los índices
\newcommand{\itab}[1]{\hspace{0em}\rlap{#1}}
\newcommand{\tab}[1]{\hspace{.12\textwidth}\rlap{#1}}

% Estilo del índice de figuras
\titlecontents
  {figure} % section
  [0em] % left
  {} % above-code
  {\itab{\figurename~\thecontentslabel} \tab{\ }} % numbered-entry-format
  {} % numberless-entry-format
  {\titlerule*[0.8pc]{.}\contentspage} % fill-entry-format
  [] % below-code

% Estilo del índice de tablas
\titlecontents
  {table} % section
  [0em] % left
  {} % above-code
  {\itab{\tablename~\thecontentslabel} \tab{\ }} % numbered-entry-format
  {} % numberless-entry-format
  {\titlerule*[0.8pc]{.}\contentspage} % fill-entry-format
  [] % below-code
