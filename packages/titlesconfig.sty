\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{packages/titlesconfig}

% Comando para generar una sección
\newcommand*{\mysection}[3]{
  \section{#1}
    \label{sec:#3/#2/#2.tex}
    \subfile{#3/#2/#2.tex}
}

% Comando para generar una subsección
\newcommand*{\mysubsection}[3]{
  \subsection{#1}
    \label{sec:#3/#2/#2.tex}
    \subfile{#3/#2/#2.tex}
}

% Comando para generar una subsubsección
\newcommand*{\mysubsubsection}[3]{
  \subsubsection{#1}
    \label{sec:#3/#2/#2.tex}
    \subfile{#3/#2/#2.tex}
}
