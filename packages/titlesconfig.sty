\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{packages/titlesconfig}

% Comando para generar una sección
\newcommand*{\mysection}[2]{
  \section{#1}
    \label{sec:#1}
    \subfile{#2/#2.tex}
}

% Comando para generar una subsección
\newcommand*{\mysubsection}[2]{
  \subsection{#1}
    \label{sec:#1}
    \subfile{#2/#2.tex}
}

% Comando para generar una subsubsección
\newcommand*{\mysubsubsection}[2]{
  \subsubsection{#1}
    \label{sec:#1}
    \subfile{#2/#2.tex}
}
